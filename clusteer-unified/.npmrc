# NPM Configuration for Clusteer

# Engine strict mode - ensure compatible Node version
engine-strict=true

# Save exact versions (not semver ranges)
save-exact=false

# Legacy peer deps for compatibility (only if needed)
# Uncomment if you encounter peer dependency issues
# legacy-peer-deps=true

# Auto-install peer dependencies
auto-install-peers=true

# Lockfile version
lockfile-version=3

# Fund messages
fund=false

# Audit level for npm audit
audit-level=moderate
